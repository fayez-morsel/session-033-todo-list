# .env.example
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@YOUR_HOST:5432/postgres
JWT_SECRET=please-change-me-super-long-random
PORT=4000
ORIGIN=http://localhost:5173

# SMTP configuration for invite emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=secret
SMTP_FROM=no-reply@example.com

# Optional application URL used in invite emails
APP_URL=http://localhost:5173

# If SMTP_* variables are omitted, the server falls back to a Nodemailer
# Ethereal test account and logs a preview URL for each invite email.
